<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WelcomeActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/welcomescreenbg"
            android:id="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:scaleType="centerCrop"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="1.0"
    />
    <ImageView
            android:layout_width="88dp"
            android:layout_height="29dp" app:srcCompat="@drawable/swooshlogo"
            android:id="@+id/imageView3"
            android:scaleType="fitCenter" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="@+id/imageView2" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="GO ALL IN"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/textView"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@android:style/TextAppearance.Material.Small" android:textSize="48sp"
            android:fontFamily="@font/montserrat" android:textColor="@android:color/white"
            android:textAlignment="center"/>
    <TextView
            android:text="ON GOING ALL OUT"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:textAppearance="@android:style/TextAppearance.Material.Small"
            android:fontFamily="@font/montserrat" android:textSize="22sp" android:textColor="@android:color/white"
            android:textAlignment="center" android:textStyle="bold" tools:layout_editor_absoluteX="77dp"
    />
    <TextView
            android:text="Find a team in your city & dominate the league."
            android:layout_width="248dp"
            android:layout_height="56dp"
            android:id="@+id/textView3" android:textColor="@android:color/white"
            android:fontFamily="@font/montserrat" android:textAlignment="center" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView2" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="GET STARTED"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:fontFamily="@font/montserrat" android:textSize="14sp"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:textColor="@android:color/white"
            android:background="@drawable/swooshbutton"/>

</android.support.constraint.ConstraintLayout>